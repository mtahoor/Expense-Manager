<div class="d-flex justify-content-between align-items-center py-2">
    <div class="">
        <h1>
            Want to Add A Transaction
        </h1>
    </div>
    <div class="">
        <%= link_to 'Income' ,transaction_create_income_path, class:"r-link"%>
        <%= link_to 'Bank Transfer' ,transaction_create_bankTransfer_path, class:"r-link"%>
        <%= link_to 'Expense' , transaction_create_expense_path , class:"r-link"%>
    </div>
</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col-2">#</th>
      <th scope="col-2">Bank</th>
      <th scope="col-2">Account Type</th>
      <th scope="col-2">Account Number</th>
      <th scope="col-2">Ammount</th>
      <th scope="col-4">
        <center>
            Actions
        </center>
        </th>
    </tr>
  </thead>
  <tbody>
    <% @transaction.each_with_index do |acc,index| %>
    <tr>
      <th scope="row"><%=index+1%></th>
      <td id='bank_name'><%=acc.account_id%></td>
      <td id='account_type'><%=acc.date%></td>
      <td id='account_number'><%=acc.type%></td>
      <td><%=acc.amount%></td>
      <td>  
          <center>
            <%= button_to({ controller: 'accounts', action: 'delete' }, method: :delete, params: { id: acc }, class: 'btn btn-danger', form: { data: { turbo_confirm: 'Are you sure to delete this Account?' },class:'d-inline' }) do %>
            <i class="fa-solid fa-trash"></i>
            <% end %>
          </center>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
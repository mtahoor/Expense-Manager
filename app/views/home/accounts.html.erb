<div class="my-3 d-flex align-items-center justify-content-between">
  <h1>
      Accounts
  </h1>
  <div class=""> 
    <%= link_to 'Add new Account', 'addAccounts', style:"text-decoration:none;color:white", class:"btn btn-success" %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col-2">#</th>
      <th scope="col-2">Bank</th>
      <th scope="col-2">Account Type</th>
      <th scope="col-2">Account Number</th>
      <th scope="col-2">Ammount</th>
      <th scope="col-4">
        <center>
            Actions
        </center>
        </th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each_with_index do |acc,index| %>
    <tr>
      <th scope="row"><%=index+1%></th>
      <td><%=acc.bank_name%></td>
      <td><%=acc.account_type%></td>
      <td><%=acc.account_number%></td>
      <td><%=acc.balance%></td>
      <td>
        <center>
            <button class=" btn btn-primary mx-2" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-pencil"></i></button>
            <form method="delete" class="d-inline">
              <input type="text" value="<%=acc.account_number%>" hidden name="account_number">
              <button class="btn btn-danger" type="submit"><i class="fa-solid fa-trash"></i></button>
            </form>
        </center>
      </td>
    </tr>
    <% end %>
    
  </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Account Details</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form method="put">
            <label for="bank_name" class="form-label">Bank Name</label>
            <input type="text" placeholder="Enter your Bank Title" name="bank_name" id="bank_name" minlength="3" class="form-control">
            <label for="account_type" class="form-label">Account Type</label>
            <input type="text" placeholder="Enter your Account Type" name="account_type" id="account_type" minlength="3" class="form-control">
            <label for="account_number" class="form-label">Account Number</label>
            <input type="text" minlength="11" maxlength="27" placeholder="Enter Your Account Number" name="account_number" id="account_number" class="form-control">
            <center>
                <button class="btn btn-success mt-2" type="submit">Update Account Details</button>
            </center>
          </form>
      </div>
    </div>
  </div>
</div>
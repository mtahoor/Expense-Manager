    <div class="col-lg-4 col-md-3 col-0">
    </div>
    <div class="col-lg-4 col-md-6 border border-2 border-success rounded mt-5 p-3"> 
            <h4>Update Account Details</h4>
            <%= form_with(model: @account, url: updateAccount_path, method: :put) do |form| %>
            <div>
                <%= form.label :bank_name %>
                <%= form.text_field :bank_name, class: 'form-control' %>
            </div>

            <div>
                <%= form.label :account_type %>
                <%= form.text_field :account_type, class: 'form-control' %>
            </div>

            <div>
                <%= form.label :account_number %>
                <%= form.text_field :account_number, class: 'form-control' %>
            </div>

            <center>
                <%= form.submit "Update Account", class: 'btn btn-success mt-2' %>
            </center>
            <% end %>
    </div>
